{#=====================================================
  User Registration page
  - Form for adding a new user
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Flask Demo - New User

{% endblock %}


{% block content %}

    <article>

        <header>
            <h2>New User Registration</h2>
        </header>

        <form action="/add-class" method="POST">

            <input
                type="text"
                name="name"
                placeholder="class name"
                required
            >

            <button>Add Song</button>

        </form>

        <footer>
            Or, if you already have an account, <a href="/login">login</a>
        </footer>

    </article>

{% endblock %}

