{#=====================================================
  User Login page
  - Form for logging in
=====================================================#}

{% extends 'pages/base.jinja' %}


{% block title %}

    Flask Demo - Login

{% endblock %}


{% block content %}

    <article>

        <header>
            <h2>Login As Teacher...</h2>
        </header>

        <form action="/login-user-teacher" method="POST">

            <input
                type="text"
                name="username"
                placeholder="Username"
                required
            >

            <input
                type="password"
                name="password"
                placeholder="Password"
                required
            >

            <button>Login</button>

        </form>

        <footer>
            Or, if you don't have an account, <a href="/register_teacher">register</a>
        </footer>

    </article>

{% endblock %}

